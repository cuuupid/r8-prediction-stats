{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./build",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "paths": { "@/*": ["./*"] },
    "baseUrl": "."
  }
}